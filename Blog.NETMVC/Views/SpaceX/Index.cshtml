@model IEnumerable<Blog.NETMVC.Models.Domain.Mission>
@{
    ViewData["Title"] = "SpaceX API";
}


<div class="text-center">
    <div class="top-banner" style="height: 300px; background-color: #032882">
        <h1 class="mt-10 mb-5 pt-5 text-light" >SpaceX API: Missions</h1>
        <div class="search-bar">
            <form method="get" action="@Url.Action("Index", "SpaceX")">
                <div class="row d-flex justify-content-center">
                    <div class="mb-3 w-25">
                        <label class="form-label text-light">Offset</label>
                        <input type="number" class="form-control" id="offset" name="Offset"
                               value="@ViewBag.Offset"
                               placeholder="eg. 1">
                    </div>
                    <div class="mb-3 w-25">
                        <label class="form-label text-light">Limit</label>
                        <input type="number" class="form-control" id="limit" name="Limit"
                               value="@ViewBag.Limit" placeholder="eg. 1" />
                    </div>

                    <div class="mb-3 ">
                        <button type="submit" class="btn btn-warning">Search</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
     <div class="bottom-banner" style="height: auto; background-color:white">
        </div>


</div>

<div class="text-center">
    <div class="container p-5">
        


        @if (Model != null)
        {
            @foreach (var mission in Model)
            {
                <div class="card mb-3" style="max-width: 100%; height: 230px">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://cloudfront-us-east-2.images.arcpublishing.com/reuters/TXDGVXPBEVMY5PA2RHRF2EA25Y.jpg" class="img-fluid rounded-start" style="height:230px">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@mission.mission_name</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary">ID: @mission.mission_id</h6>
                                <p class="card-text" style="height: 70px; overflow: hidden;">@mission.description</p>
                                <a href="@mission.website" class="btn btn-primary">Website</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <p>No missions found.</p>
        }


    </div>
</div>

